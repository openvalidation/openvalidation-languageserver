{
  "name": "ov-language-server",
  "version": "0.0.5",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/openvalidation/ov-language-server.git"
  },
  "description": "language-server implementation for openVALIDATION",
  "dependencies": {
    "axios": "^0.19.0",
    "class-transformer": "^0.2.3",
    "cpx": "^1.5.0",
    "express": "^4.15.2",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.13",
    "make-coverage-badge": "^1.1.1",
    "reflect-metadata": "^0.1.13",
    "typescript-string-operations": "^1.3.1",
    "vscode-languageserver": "^5.2.1",
    "vscode-languageserver-types": "^3.14.0",
    "vscode-uri": "^2.0.3",
    "vscode-ws-jsonrpc": "^0.1.1",
    "ws": "^7.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.19",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.144",
    "@types/node": "^12.11.1",
    "@types/normalize-url": "^4.2.0",
    "@types/ws": "^6.0.3",
    "axios-mock-adapter": "^1.17.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.6.4"
  },
  "scripts": {
    "prepare": "npm run clean && npm run build",
    "clean": "rimraf lib",
    "build": "tsc && npm run copy:exe",
    "start": "npm run build && node lib/server.js",
    "start:external": "npm run build && node lib/server.js --external",
    "start:watch": "nodemon",
    "test": "jest && make-coverage-badge",
    "test:watch": "jest --watch",
    "debug": "nodemon --debug lib/server.js",
    "copy:exe": "cpx ./src/rest-interface/ov-rest.exe ./lib/rest-interface/"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
